<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-dark">Nova categoria</button></a>
<a href="/admin/categorias"><button class="btn btn-dark">Atualizar</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>
            <br>
            <small>Data: {{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-dark mt-4">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>        
        </div>
    </div>
{{else}}
    <h3 class="mt-4" style="color: red;">Nenhuma categoria registrada.</h3>
{{/each}}